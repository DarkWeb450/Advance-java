package Lab3.Hibernate;

import java.util.List;
import org.hibernate.Session;
import org.hibernate.Transaction;



public class Select 
{
	public static void main(String[] args) 
	{
		Session session = HibernateUtil.getSessionFactory().openSession();
        
        Transaction tx = session.beginTransaction();
		List<patient> hospital = session.createQuery("FROM hospital", patient.class).getResultList();
	    if(hospital.isEmpty()) 
	    {
	        System.out.println("No employees found.");
	    } 
	    else 
	    {
	        System.out.println("ID\tName\t\t\tAge\tDate Of Birth");
	        for(patient hospitall : hospital) {
	            System.out.println(hospitall.getID() + "\t" + hospitall.getFirst_Name() + " " + hospitall.getLast_Name() + "\t\t" + hospitall.getAge() + "\t" + hospitall.getDOB());
	        }
	    }

        tx.commit();
        session.close();
	}
}

