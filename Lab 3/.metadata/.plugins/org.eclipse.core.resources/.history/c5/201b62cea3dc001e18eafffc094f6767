package Lab3.Hibernate;

import java.util.List;
import org.hibernate.Session;
import org.hibernate.Transaction;



public class Select 
{
	public static void main(String[] args) 
	{
		Session session = HibernateUtil.getSessionFactory().openSession();
        
        Transaction tx = session.beginTransaction();
		List<hospital> hospital = session.createQuery("FROM hospital", hospital.class).getResultList();
	    if(hospital.isEmpty()) 
	    {
	        System.out.println("No data found.");
	    } 
	    else 
	    {
	        System.out.println("ID\tName\t\t\tAge\tDate Of Birth");
	        for(hospital hospital1 : hospital) {
	            System.out.println(hospital1.getID() + "\t" + hospital1.getFirst_Name() + " " + hospital1.getLast_Name() + "\t\t" + hospital1.getAge() + "\t" + hospital1.getDOB());
	        }
	    }

        tx.commit();
        session.close();
	}
}
